{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "lib": ["es2017"],
    "types": ["node", "mocha"],
    "declaration": true,
    "outDir": "lib",
    "rootDir": "src",
    "strict": true,
    "experimentalDecorators": true,
  },
  "exclude": [
    "lib",
    "node_modules",
    "src/**/*.spec.ts"
  ],
  "include": [
    "src"
  ]
}